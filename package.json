{
  "name": "italki-api",
  "version": "0.0.1",
  "description": "An unofficial API for italki.com.",
  "main": "index.js",
  "scripts": {
    "start": "node start",
    "lint": "eslint .",
    "prettier-lint": "prettier es6 --write server/**/*.js && eslint .",
    "validate": "yarn flow",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "pretty-quick --staged && lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PatriceVignola/italki-api.git"
  },
  "keywords": [
    "italki",
    "api",
    "tracker",
    "unofficial"
  ],
  "author": "Patrice Vignola",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PatriceVignola/italki-api/issues"
  },
  "homepage": "https://github.com/PatriceVignola/italki-api#readme",
  "dependencies": {
    "cors": "^2.8.4",
    "eslint-config-airbnb-base": "^12.1.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "italki-api": "^0.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.74.0",
    "flow-typed": "^2.4.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.3",
    "prettier": "^1.13.5",
    "pretty-quick": "^1.6.0"
  }
}
